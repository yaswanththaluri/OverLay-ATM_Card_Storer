<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.audigosolutions.android.outlay">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".DataHelper"
        android:allowBackup="true"
        android:icon="@drawable/cardicon"
        android:label="OverLay"
        android:roundIcon="@drawable/cardicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserRegistration"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".LogIn"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".LandingPage"
            android:label="Dashboard" />
        <activity android:name=".CardCredentials"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardCredentials"
    android:paddingTop="25dp">


    <RelativeLayout
        android:id="@+id/credentialCard"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="10dp"
        android:background="@drawable/card"
        >


        <TextView
            android:id="@+id/credentialCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:text="XXXX   XXXX   XXXX   XXXX"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/credentialNameOnCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="35dp"
            android:text="Name on Card"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/credentialExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MM / YY"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/credentialCvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:layout_alignParentEnd="true"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!--<ImageView-->
            <!--android:layout_width="55dp"-->
            <!--android:layout_height="55dp"-->
            <!--android:src="@drawable/share"-->
            <!--android:layout_margin="25dp"-->
            <!--android:id="@+id/share"-->
            <!--android:layout_gravity="center"/>-->

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/delete"
            android:layout_margin="25dp"
            android:id="@+id/cardDelete"
            android:layout_gravity="center"/>

    </LinearLayout>



</LinearLayout>